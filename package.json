{
	"publisher": "rvest",
	"name": "vs-code-prettier-eslint",
	"displayName": "Prettier Eslint",
	"description": "Extension to format JavaScript code using prettier-eslint package",
	"keywords": [
		"eslint",
		"prettier",
		"prettier-eslint"
	],
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/idahogurl/vs-code-prettier-eslint"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Formatters"
	],
	"main": "extension.js",
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:javascriptreact"
	],
	"contributes": {
		"configuration": {
			"title": "Prettier Eslint",
			"properties": {
				"vs-code-prettier-eslint.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable Prettier Eslint"
				},
				"vs-code-prettier-eslint.eslintFileName": {
					"type": "string",
					"default": ".eslintrc",
					"description": "Eslint config file name"
				},
				"vs-code-prettier-eslint.eslintFileType": {
					"type": "string",
					"default": "json",
					"enum": [
						"json",
						"yaml"
					],
					"description": "Eslint config file type"
				},
				"vs-code-prettier-eslint.prettierFileName": {
					"type": "string",
					"default": "",
					"description": "(optional) Prettier options file name"
				},
				"vs-code-prettier-eslint.prettierFileType": {
					"type": "string",
					"default": "json",
					"enum": [
						"json",
						"yaml"
					],
					"description": "Prettier config file type"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-plugin-import": "^2.20.1",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"eslint": "^6.8.0",
		"prettier": "^1.19.1",
		"prettier-eslint": "^9.0.1",
		"yaml": "^1.7.2"
	}
}
